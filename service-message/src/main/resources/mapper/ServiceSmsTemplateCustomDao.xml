<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.servicemessage.dao.ServiceMessageTemplateCustomDao" >

    <!-- 根据templateId查询模板 -->
    <select id="selectByTemplateId" resultMap="com.example.servicemessage.dao.ServiceMessageTemplateCustomDao.BaseResultMap" parameterType="java.lang.String" >
        select
        <include refid="com.example.servicemessage.dao.ServiceMessageTemplateCustomDao.Base_Column_List" />
        from service_sms_template
        where template_id = #{templateId}
    </select>

</mapper>